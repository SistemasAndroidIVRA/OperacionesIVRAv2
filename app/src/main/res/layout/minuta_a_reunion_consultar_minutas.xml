<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F0FF"
    tools:context=".Minuta.Vistas.MinutaConsultarMinutas">

    <LinearLayout
        android:id="@+id/linearContenidoMinutas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/linearLayout37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Inventario"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMinutaConsRegresar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/icono_regresar" />

                <TextView
                    android:id="@+id/textView175"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Minutas existentes"
                    android:textColor="@color/Recepcion"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView274"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Registros: "
                android:textColor="@color/secondary_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblMinutaConsRegistros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textColor="@color/Picking"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="2sp"
            android:layout_marginEnd="10sp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnMinutaConsultarShowFiltros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/icono_desplegar"
                android:text="buscar" />

            <LinearLayout
                android:id="@+id/linearMinutaConsultarShowFiltros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView258"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fecha: "
                        android:textAlignment="center"
                        android:textColor="@color/secondary_text"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtMinutaConsDateRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#000000"
                        android:ems="10"
                        android:hint="Rango de fechas"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textColor="@color/secondary_text" />

                    <ImageButton
                        android:id="@+id/btnMinutaConsRangeDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/color6"
                        android:textAlignment="center"
                        app:srcCompat="@drawable/fecha_icono" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView256"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Buscador: "
                        android:textAlignment="center"
                        android:textColor="@color/secondary_text"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtMinutaConsFiltrador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:enabled="true"
                        android:hint="Ejem. Visita al cliente"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textColor="@color/secondary_text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5sp"
                    android:background="@color/divider"
                    android:orientation="vertical"></LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Inventario"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView262"
                            android:layout_width="150sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Núm."
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView263"
                            android:layout_width="150sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Convocó"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView270"
                            android:layout_width="150sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lugar"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView271"
                            android:layout_width="150sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fecha"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView272"
                            android:layout_width="150sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hora inicio"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView273"
                            android:layout_width="150sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hora fin"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerMinutasItem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>