<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="950dp"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/registrado"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/cliente" />

            <ProgressBar
                android:id="@+id/progressBarregistrado"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="181dp"
                android:layout_height="20dp"
                android:indeterminate="false"
                android:progressTint="@color/Inventario" />

            <ImageView
                android:id="@+id/aprobado"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="#00FFFFFF"
                android:backgroundTint="@color/divider"
                app:srcCompat="@drawable/pedido_registrado" />

            <ProgressBar
                android:id="@+id/progressBaraprobado"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="181dp"
                android:layout_height="20dp"
                android:indeterminate="false"
                android:progressTint="@color/Inventario" />

            <ImageView
                android:id="@+id/revisado"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="#00FFFFFF"
                android:backgroundTint="@color/divider"
                app:srcCompat="@drawable/pedido_autorizado" />

            <ProgressBar
                android:id="@+id/progressBarrevisado"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="181dp"
                android:layout_height="20dp"
                android:indeterminate="false"
                android:progressTint="@color/Inventario" />

            <ImageView
                android:id="@+id/surtido"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="#00FFFFFF"
                android:backgroundTint="@color/divider"
                app:srcCompat="@drawable/surtiendo_pedido" />

            <ProgressBar
                android:id="@+id/progressBarsurtido"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="181dp"
                android:layout_height="20dp"
                android:indeterminate="false"
                android:progressTint="@color/Inventario" />

            <ImageView
                android:id="@+id/nota"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:backgroundTint="@color/divider"
                app:srcCompat="@drawable/generando_nota" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView74"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cliente: "
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/clienterecepcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/secondary_text"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>